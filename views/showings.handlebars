<div class="container">
    <div class="table-wrapper">
        <div class="table-title">
            <div class="row">
                <div class="col-sm-8">
                    <h2>Showing <b>Details</b></h2>
                </div>
                <div class="col-sm-4">
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#orderModal"><i
                            class="fa fa-plus"></i> Add New
                    </button>
                </div>
                {{> searchBar}}
            </div>
        </div>
    </div>
    {{!-- {{> searchBar}} --}}
    <table id='myTable' class="table table-bordered">
        <tr>
            <th>Title</th>
            <th>Time</th>
            <th>Cost</th>
            <th>Room</th>
            <th>Actions</th>
        </tr>
        <tbody>
        {{#each showings}}
            <tr id="{{id}}">
                <td>{{title}}</td>
                <td>{{time}}</td>
                <td>{{cost}}</td>
                <td>{{room}}</td>
                <td>
                    <a class="add" title="Add" data-toggle="tooltip"><i class="material-icons">&#xE03B;</i></a>
                    <a class="edit" title="Edit" data-toggle="tooltip"><i class="material-icons">&#xE254;</i></a>
                    <a class="delete" title="Delete" data-toggle="tooltip"><i
                            class="material-icons">&#xE872;</i></a>
                </td>
            </tr>
        {{/each}}
        </tbody>
    </table>
</div>

<!--Modal-->
<div class="modal fade" id="orderModal" tabindex="-1" role="dialog" aria-labelledby="orderModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="orderModalLabel"><strong>Add Showing</strong></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <form action="/showings" method="POSt" role="form">
                    <div class="form-row">
                        {{!-- Time input --}}
                        <div class="mb-3">
                            <label id="time_label" for="time">Time</label>
                            <input id="time" name="time" type="text" class="form-control" value="2021-05-30 20:00:00"/>
                        </div>
                        {{!-- Room Select --}}
                        <div class="select">
                            <label id="room_label" for="room">Room#</label>
                            <div class="input-group mb-3">
                                <select id="room" name="room" class="form-control form-select" aria-label="Room#">
                                    <option>1</option>
                                    <option>2</option>
                                    <option>3</option>
                                </select>
                            </div>
                        </div>
                        {{!-- Cost --}}
                        <div class="amount">
                            <label id="amount_label" for="amount">Cost</label>
                            <div class="input-group mb-3">
                                <input id="amount" name="amount" type="number" class="form-control" value="0.00"
                                       aria-label="Total Amount"/>
                            </div>
                        </div>
                        {{!-- Title --}}
                        <div class="mb-3">
                            <label for="title">Title</label>
                            <div class="input-group mb-3">
                                <input type="text" name="title" id="title" class="form-control">
                            </div>
                            <br>

                        </div>
                    </div>
                    <div class="col-sm-10">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
            </form>
        </div>
    </div>
</div>
</body>
